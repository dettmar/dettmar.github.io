retina = '(-webkit-min-pixel-ratio: 2), (min-resolution: 192dpi)'
mobile = '(max-width : 480px)'
tablet = '(max-width : 768px)'
portrait = 'only screen and (orientation : portrait)'
landscape = 'only screen and (orientation : landscape)'

html
	background #ddd

html, body
	width 100%
	height 100%
	margin 0
	padding 0
	text-align center
	color #333
	font-family 'Droid Sans Mono', 'Courier New', Courier, sans-serif
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

.wrap
	width 100%
	height 200%
	z-index 1
	-webkit-transform translateZ(0)

section
	display table
	width 100%
	height 50%

section .inner
	display table-cell
	vertical-align middle

section .center
	max-width 80%
	margin 0 auto

::selection
	background #000
	color #fff

::-moz-selection
	background #000
	color #fff

a
	color #33f
	text-decoration none
	border-bottom 10px solid
	@media tablet
		border-bottom-width 6px
	@media mobile
		border-bottom-width 4px

a:hover
	color #f00

a:visited
	color #551A8B

a:visited:hover
	color #f00

a:active
	color #f55

h1, h2, h3, h4, h5, h6
	font-weight normal

h1
	font-family 'Permanent Marker'
	font-size 120px
	line-height 120px
	font-weight bold
	-webkit-animation blink 5s alternate infinite
	@media tablet
		font-size 90px
		line-height 90px
	@media mobile
		font-size 40px
		line-height 40px

h2
	font-size 30px
	@media tablet
		font-size 26px
	@media mobile
		font-size 22px

p
	width 40%
	max-width 500px
	font-size 20px
	margin 0 auto
	line-height 2em
	@media tablet
		font-size 18px
	@media mobile
		width 80%
		font-size 16px

ul
	width 80%
	padding 0 0 100px
	margin 0 auto
	list-style none

	li
		padding 20px .2em 0
		
		a
			font-size 100px
			@media tablet
				font-size 60px
			@media mobile
				font-size 30px
		
		.details
			padding-top 30px
			display block



.tags
	font-size 30px
	line-height 60px
	@media tablet
		font-size 25px
		line-height 50px
	@media mobile
		font-size 15px
		line-height 30px
	
.peace
	font-size 600px
	line-height 100px
	font-family Arial, sans-serif
	span
		cursor pointer
	@media mobile
		font-size 200px


#background
	position fixed
	left 0
	top 0
	width 100%
	height 100%
	-webkit-transform translateZ(0)
	z-index -1
	opacity 0
	transition: opacity .5s ease-in-out;
	-moz-transition: opacity .5s ease-in-out;
	-webkit-transition: opacity .5s ease-in-out;

	&.loaded
		opacity 1
	.mobile_bg
		width 100%
		height 100%