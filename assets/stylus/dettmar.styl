.tags
	font-size 30px
	font-weight bold
	line-height 60px
	@media mobile
		font-size 20px
		line-height 40px
	
.peace
	font-size 600px
	font-family Arial, sans-serif
	//-webkit-animation blink 5s alternate infinite
	@media mobile
		font-size 200px


.icon
	font-style normal
	padding-right .5em
	font-size 50px
	vertical-align middle

#background
	position fixed
	left 0
	top 0
	width 100%
	height 100%
	-webkit-transform translateZ(0)
	z-index -1
	opacity 0
	&.loaded
		opacity 1
		transition: opacity .5s ease-in-out;
		-moz-transition: opacity .5s ease-in-out;
		-webkit-transition: opacity .5s ease-in-out;
	.mobile_bg
		width 100%
		height 100%