retina = '(-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)'
mobile = 'only screen and (min-device-width : 320px) and (max-device-width : 480px)'
tablet = 'only screen and (min-device-width : 768px) and (max-device-width : 1024px)'
portrait = 'only screen and (orientation : portrait)'
landscape = 'only screen and (orientation : landscape)'

html
	background #ddd

html, body
	width 100%
	height 100%
	margin 0
	padding 0
	text-align center
	color #333
	font-family 'Droid Sans Mono', sans-serif

.wrap
	width 100%
	height 200%
	z-index 1
	-webkit-transform translateZ(0)

section
	display table
	width 100%
	height 50%

section .inner
	display table-cell
	vertical-align middle

section .center
	max-width 80%
	margin 0 auto

::selection
	background #000
	color #fff

::-moz-selection
	background #000
	color #fff

a
	color #33f
	text-decoration none
	border-bottom 10px solid
	@media mobile
		border-bottom-width 6px

a:hover
	color #f00

a:visited
	color #551A8B

a:visited:hover
	color #f00

a:active
	color #f55

h1, h2, h3, h4, h5, h6
	font-weight normal

h1
	font-family 'Permanent Marker'
	font-size 120px
	line-height 120px
	font-weight bold
	-webkit-animation blink 5s alternate infinite
	@media mobile
		font-size 40px
		line-height 40px

h2
	font-size 30px
	@media mobile
		font-size 22px

p
	width 40%
	max-width 500px
	font-size 20px
	margin 0 auto
	line-height 2em
	@media mobile
		font-size 16px

ul
	width 80%
	padding 0 0 100px
	margin 0 auto
	list-style none

	li
		padding 20px .2em 0
		
		a
			font-size 100px
			@media mobile
				font-size 30px
		
		.details
			padding-top 30px
			display block


